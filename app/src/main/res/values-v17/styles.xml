<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="leagueHeader">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingTop">4dp</item>
    </style>
    <style name="share_score">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:gravity">center</item>
    <item name="android:text">@string/share_text</item>
    <item name="android:contentDescription">@string/share_score</item>
    <item name="android:drawableLeft">@android:drawable/ic_menu_share</item>
        <item name="android:drawableStart">@android:drawable/ic_menu_share</item>
    <item name="android:paddingStart">120dp</item>
    <item name="android:paddingEnd">120dp</item>
    </style>

    <style name="about">
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingStart">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingEnd">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
    </style>

    <style name="listHolder">
        <item name="android:paddingStart">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginStart">@dimen/list_horizonal_matgin</item>
        <item name="android:layout_marginEnd">@dimen/list_horizonal_matgin</item>
        <item name="android:paddingEnd">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
    </style>

</resources>
